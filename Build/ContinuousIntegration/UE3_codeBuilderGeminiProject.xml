
 <project name="UE3_codeBuilderGemini" buildafterfailed="false">

    <dateformat format="yyyy-MM-dd HH:mm:ss"/>

    <listeners>
      <currentbuildstatuslistener file="\\build-farm-01\logs/${project.name}/buildstatus.txt"/>
    </listeners>

    <!-- Bootstrappers are run every time the build runs, *before* the modification checks -->
    <bootstrappers>
    </bootstrappers>

    <!-- Defines where cruise looks for changes, to decide whether to run the build --> 
    <modificationset quietperiod="300" > 
        <p4 port="p4-server.epicgames.net:1666" client="RENDERFARM-02_UE3-continuousIntegration-codeBuilderGemini" user="build_machine" view="//depot/UnrealEngine3-Gemini/Development/..."/>

        <p4 port="p4-server.epicgames.net:1666" client="RENDERFARM-02_UE3-continuousIntegration-codeBuilderGemini" user="build_machine" view="//depot/UnrealEngine3-Gemini/Binaries/..." />
        <p4 port="p4-server.epicgames.net:1666" client="RENDERFARM-02_UE3-continuousIntegration-codeBuilderGemini" user="build_machine" view="//depot/UnrealEngine3-Gemini/Engine/Config/..." />
        <p4 port="p4-server.epicgames.net:1666" client="RENDERFARM-02_UE3-continuousIntegration-codeBuilderGemini" user="build_machine" view="//depot/UnrealEngine3-Gemini/ExampleGame/Config/..." />
        <p4 port="p4-server.epicgames.net:1666" client="RENDERFARM-02_UE3-continuousIntegration-codeBuilderGemini" user="build_machine" view="//depot/UnrealEngine3-Gemini/UTGame/Config/..." />
        <p4 port="p4-server.epicgames.net:1666" client="RENDERFARM-02_UE3-continuousIntegration-codeBuilderGemini" user="build_machine" view="//depot/UnrealEngine3-Gemini/WarGame/Config/..." />
    </modificationset>

    <!-- Configures the actual build loop, how often and which build file/target --> 
    <schedule interval="60" >
      <ant antscript="C:\bin\ant\bin\ant.bat"
           buildfile="UE3_codeBuilderGemini.xml"
           target="build"
           uselogger="false"
           usedebug="false"/> 
    </schedule>

    <!-- Directory to write build logs to encoding="ISO-8859-1"--> 
    <log dir="\\build-farm-01\logs/${project.name}"> 
       <!-- <merge dir="logs/test-results"/> -->
    </log>

    <!-- Publishers are run *after* a build completes --> 
    <publishers>

       <currentbuildstatuspublisher file="\\build-farm-01\logs/${project.name}/buildstatus.txt"/>

       <artifactspublisher 
           dir="checkout/${project.name}/UnrealEngine3-Gemini/AutomatedBuildFilez"
           dest="\\build-farm-01\artifacts/${project.name}"/>

       <htmlemail mailhost="zeus.epicgames.net" 
           returnaddress="build@epicgames.com" 
           buildresultsurl="${buildMachineURL}" 
           skipusers="true" 
           spamwhilebroken="true"
           css="C:/bin/cruisecontrol/reporting/jsp/webcontent/css/cruisecontrol.css"
           xsldir="C:/bin/cruisecontrol/reporting/jsp/webcontent/xsl" 
           logdir="\\build-farm-01\logs/${project.name}">
   
           <always address="msew@epicgames.com"/>
           <!-- <always address="msew@epicgames.com"/> -->
           <failure reportWhenFixed="true" address="msew@epicgames.com"/>
           <!-- <failure reportWhenFixed="true" address="coders-list@epicgames.com"/> -->
       </htmlemail>



   </publishers>

  </project> 
